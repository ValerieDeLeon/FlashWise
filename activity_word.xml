<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C4245"
    tools:context=".WordActivity">

    <ScrollView
        android:layout_width="500sp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30sp" />

            <TextView
                android:id="@+id/words_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Add Study Words!"
                android:textAlignment="center"
                android:textColor="#dfcdc3"
                android:textSize="40sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30sp" />



            <EditText
                android:id="@+id/input1"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#719192"
                android:fontFamily="sans-serif-smallcaps"
                android:ems="10"
                android:hint="Word 1"
                android:inputType="textPersonName"
                android:textColor="#719192"
                android:textColorHint="#719192" />

            <EditText
                android:id="@+id/input2"
                android:layout_width="300sp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#719192"
                android:ems="10"
                android:hint="Word 2"
                android:inputType="textPersonName"
                android:textColor="#719192"
                android:textColorHint="#719192" />

            <EditText
                android:id="@+id/input3"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#719192"
                android:fontFamily="sans-serif-smallcaps"
                android:ems="10"
                android:hint="Word 3"
                android:inputType="textPersonName"
                android:textColor="#719192"
                android:textColorHint="#719192" />

            <EditText
                android:id="@+id/input4"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#719192"
                android:fontFamily="sans-serif-smallcaps"
                android:ems="10"
                android:hint="Word 4"
                android:inputType="textPersonName"
                android:textColor="#719192"
                android:textColorHint="#719192" />

            <EditText
                android:id="@+id/input5"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#719192"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Word 5"
                android:inputType="textPersonName"
                android:textColor="#719192"
                android:textColorHint="#719192" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30sp" />

            <Button
                android:id="@+id/addBtn"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#5F6769"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Add"
                android:textColor="#DFCDC3" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30sp" />

            <TextView
                android:id="@+id/words_moreText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Your List Of Words:"
                android:textAlignment="center"
                android:textColor="#dfcdc3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/wordList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:textAlignment="center"
                android:textColor="#719192"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30sp" />

            <Button
                android:id="@+id/nextBtn"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_gravity="center"
                android:background="#5F6769"
                android:text="Continue"
                android:textColor="#DFCDC3" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
