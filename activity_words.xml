<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C4245"
    tools:context=".wordsActivity">

    <ScrollView
        android:layout_width="500sp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30sp" />

            <TextView
                android:id="@+id/words_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Add Study Words!"
                android:textAlignment="center"
                android:textColor="#dfcdc3"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/words_moreText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Add Up To 5 Words"
                android:textAlignment="center"
                android:textColor="#dfcdc3"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30sp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#719192"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Waiting for knowledge..."
                android:textColor="#719192" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30sp" />

            <TextView
                android:id="@+id/words_moreText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Your List Of Words:"
                android:textAlignment="center"
                android:textColor="#dfcdc3"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
